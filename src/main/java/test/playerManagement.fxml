<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" fx:controller="test.PlayerManagement" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextField fx:id="playerNameField" promptText="Player Name"/>
        <TextField fx:id="playerNumberField" promptText="Player Number"/>
        <TextField fx:id="playerTeamField" promptText="Player Team"/>
        <Button text="Enter Player Information" onAction="#handleEnterPlayerInformation"/>
        <Button text="Display Player Information" onAction="#handleDisplayPlayerInformation"/>
        <Button text="Update Player Information" onAction="#handleUpdatePlayerInformation"/>
        <Button text="Search Player" onAction="#handleSearchPlayer"/>
        <Button text="Display Player Role" onAction="#handleDisplayPlayerRole"/>
        <TableView fx:id="playerTableView">
            <columns>
                <TableColumn text="Name"/>
                <TableColumn text="Number"/>
                <TableColumn text="Team"/>
                <TableColumn text="Age"/>
                <TableColumn text="Score"/>
                <TableColumn text="Rank"/>
                <TableColumn text="Role"/>
            </columns>
        </TableView>
    </children>
</VBox>
